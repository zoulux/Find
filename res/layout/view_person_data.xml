<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/id_pData_img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/ic_launcher"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别:" />

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content" >
        </LinearLayout>

        <TextView
            android:id="@+id/id_pDate_sex"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男" />

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content" >
        </LinearLayout>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年龄:" />

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content" >
        </LinearLayout>

        <TextView
            android:id="@+id/id_pData_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="岁" />

        <LinearLayout
            android:layout_width="20dp"
            android:layout_height="wrap_content" >
        </LinearLayout>

        <TextView
            android:id="@+id/textV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区:" />

        <LinearLayout
            android:layout_width="10dp"
            android:layout_height="wrap_content" >
        </LinearLayout>

        <TextView
            android:id="@+id/id_pData_province"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安徽 滁州" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="账号:"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/id_pData_userName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1234"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="昵称:"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/id_pData_nick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1234"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="签名:"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/id_pData_homePage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1234"
            android:textSize="25dp" />
    </LinearLayout>

</LinearLayout>